<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Card_View"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="20sp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/iconImageView"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/image_Description"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_alignBottom="@id/buttons_Table"
                app:srcCompat="@drawable/ic_baseline_checklist_rtl_24"/>

            <TextView
                android:id="@+id/List_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/iconImageView"
                android:text="@string/default_list_name"
                android:textSize="20sp"
                tools:ignore="RelativeOverlap" />

            <TextView
                android:id="@+id/List_Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/List_Name"
                android:layout_below="@id/List_Name"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/iconImageView"
                android:text="@string/default_list_date"
                android:textSize="15sp"
                tools:ignore="RelativeOverlap" />


            <TextView
                android:id="@+id/Total_Value_List"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/List_Name"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:text="@string/default_total_value"
                android:textSize="15sp"
                tools:ignore="RelativeOverlap" />

            <LinearLayout
                android:id="@+id/buttons_Table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/iconImageView"
                tools:ignore="RelativeOverlap"
                android:orientation="horizontal"
                android:layout_below="@id/List_Date"
                android:layout_marginTop="5dp"
                >

                <Button
                    android:id="@+id/btn_Edit"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_edit"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    />

                <Button
                    android:id="@+id/btn_Delete"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btn_delete"
                    android:textSize="12sp"
                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_weight="1"
                    />

            </LinearLayout>


        </RelativeLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>